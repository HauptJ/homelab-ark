version: '3'

services:
  ark:
    image: turzam/ark
    environment:
      SESSIONNAME: Ark Docker
      SERVERMAP: TheIsland
      SERVERPASSWORD: "${SERVERPASSWORD}"
      ADMINPASSWORD: "${ADMINPASSWORD}"
      BACKUPONSTART: 1
      UPDATEONSTART: 1
      AUTOBACKUP: 15
      TZ: US/Pacific
      GID: 1000
      UID: 1000
    volumes:
      - {{ ark_dir }}:/ark
    ports:
      - '7778:7778/udp'
      - '27015:27015/udp'
      - '32330:32330'
