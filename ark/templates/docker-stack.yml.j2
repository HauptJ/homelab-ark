version: '3'

services:

  island:
    image: turzam/ark
    environment:
      SESSIONNAME: Homelab TheIsland
      SERVERMAP: TheIsland
      SERVERPASSWORD: "${SERVERPASSWORD}"
      ADMINPASSWORD: "${ADMINPASSWORD}"
      BACKUPONSTART: 1
      UPDATEONSTART: 1
      AUTOBACKUP: 15
      TZ: US/Pacific
      GID: 1000
      UID: 1000
    volumes:
      - {{ ark_dir }}/island:/ark
    ports:
      - '7778:7778'
      - '7778:7778/udp'
      - '27015:27015'
      - '27015:27015/udp'

  aberration:
    image: turzam/ark
    environment:
      SESSIONNAME: Homelab Aberration
      SERVERMAP: Aberration_P
      SERVERPASSWORD: "${SERVERPASSWORD}"
      ADMINPASSWORD: "${ADMINPASSWORD}"
      SERVERPORT: 27016
      STEAMPORT: 7779
      BACKUPONSTART: 1
      UPDATEONSTART: 1
      AUTOBACKUP: 15
      TZ: US/Pacific
      GID: 1000
      UID: 1000
    volumes:
      - {{ ark_dir }}/aberration:/ark
    ports:
      - '7779:7779'
      - '7779:7779/udp'
      - '27016:27016'
      - '27016:27016/udp'
